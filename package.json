{
  "name": "opsis-agent",
  "version": "1.3.2",
  "description": "OPSIS Autonomous IT Management Agent",
  "main": "dist/service/agent-service.js",
  "scripts": {
    "build": "npm run build:service && npm run copy:gui-assets",
    "build:service": "tsc -p tsconfig.service.json",
    "copy:gui-assets": "node scripts/copy-assets.js",
    "build:exe": "npm run build:service && pkg dist/service/agent-service.js --targets node18-win-x64 --output dist/opsis-agent-service.exe --compress GZip",
    "start:service": "node dist/service/agent-service.js",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "create-installer": "iscc installer.iss",
    "package:installer": "npm run build && npm run create-installer"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "runbooks/**/*",
      "config/**/*",
      "dist/portal/**/*"
    ],
    "outputPath": "dist"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "keytar": "^7.9.0",
    "node-windows": "^1.0.0-beta.8",
    "semver": "^7.5.4",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "jest": "^30.2.0",
    "pkg": "^5.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  },
  "author": "OPSIS",
  "license": "Proprietary"
}
