{
  "name": "opsis-agent",
  "version": "1.0.0",
  "description": "OPSIS Autonomous IT Management Agent",
  "main": "dist/service/agent-service.js",
  "scripts": {
    "build": "npm run build:service && npm run build:gui",
    "build:service": "tsc -p tsconfig.service.json",
    "build:gui": "tsc -p tsconfig.gui.json && npm run copy:gui-assets",
    "copy:gui-assets": "xcopy /E /I /Y src\\gui\\assets dist\\gui\\assets && copy src\\gui\\index.html dist\\gui\\",
    "start:service": "node dist/service/agent-service.js",
    "start:gui": "electron dist/gui/electron-main.js",
    "install-service": "node scripts/install-service.js",
    "uninstall-service": "node scripts/uninstall-service.js",
    "package": "npm run build && electron-builder",
    "package:installer": "npm run build && npm run create-installer"
  },
  "build": {
    "appId": "com.opsis.agent",
    "productName": "OPSIS Agent",
    "directories": {
      "output": "installer-output"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "include": "installer/installer-script.nsh"
    }
  },
  "dependencies": {
    "node-windows": "^1.0.0-beta.8",
    "sql.js": "^1.10.3",
    "node-fetch": "^2.7.0",
    "ws": "^8.16.0",
    "yaml": "^2.3.4",
    "semver": "^7.5.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/ws": "^8.5.10",
    "electron": "^28.1.3",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3"
  },
  "author": "OPSIS",
  "license": "Proprietary"
}
